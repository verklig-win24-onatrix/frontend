@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
  var content = (ContentModels.BrandsSection)Model.Content;
  var settings = Model.Settings as ContentModels.BrandsSettings;
  var logos = content.BrandImages;

  var sectionColor = settings?.BackgroundColor?.Color ?? string.Empty;
  var sectionColorStyle = !string.IsNullOrEmpty(sectionColor)
    ? $"background-color: {sectionColor} !important;"
    : string.Empty;
}

<section class="brands-section" style="@sectionColorStyle">

  <div class="container">

    @if (logos != null && logos.Any())
    {
      foreach (var logo in logos)
      {
        <div class="logo">
          <img src="@logo.Url()" />
        </div>
      }
    }

  </div>

</section>