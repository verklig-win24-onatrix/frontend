@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
  var content = (ContentModels.AboutFounderSection)Model.Content;
  var settings = Model.Settings as ContentModels.AboutFounderSettings;

  var sectionColor = settings?.BackgroundColor?.Color ?? string.Empty;
  var sectionColorStyle = !string.IsNullOrEmpty(sectionColor)
    ? $"background-color: {sectionColor} !important;"
    : string.Empty;
}

<section class="about-founder-section" style="@sectionColorStyle">
  <div class="grid">

    <div class="profile">
      <img src="@content.AboutFounderImage.Url()" />
      <span>@content.AboutFounderSignature</span>
    </div>

    <div class="container">
      <div class="rte">@Html.Raw(content.AboutFounderBody)</div>
    </div>

  </div>
</section>