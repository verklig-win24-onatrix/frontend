@using UmbracoCMS.ViewModels
@model QuestionFormViewModel

@using (Html.BeginUmbracoForm("HandleQuestionForm", "Form", FormMethod.Post, new { novalidate = "novalidate", id = "questionForm"}))
{
  <div class="form">

    <div class="grid">
      <div>
        <label asp-for="QuestionName" class="hidden"></label>
        <input asp-for="QuestionName" type="text" placeholder="@Html.DisplayNameFor(x => x.QuestionName)" class="input-field" />
        <span asp-validation-for="QuestionName"></span>
      </div>

      <div>
        <label asp-for="QuestionEmail" class="hidden"></label>
        <input asp-for="QuestionEmail" type="text" placeholder="@Html.DisplayNameFor(x => x.QuestionEmail)" class="input-field" />
        <span asp-validation-for="QuestionEmail"></span>
      </div>
    </div>

    <div>
      <label asp-for="Question" class="hidden"></label>
      <textarea asp-for="Question" type="text" placeholder="@Html.DisplayNameFor(x => x.Question)" class="input-area"></textarea>
      <span asp-validation-for="Question"></span>
    </div>

    <button type="submit" class="form-btn">Submit</button>

    @if (TempData["QuestionFormError"] != null)
    {
      <div class="form-error">
        @TempData["QuestionFormError"]
      </div>
    }
    else if (TempData["QuestionFormSuccess"] != null)
    {
      <div class="form-success">
        @TempData["QuestionFormSuccess"]
      </div>
    }

    <div></div>

  </div>
}